{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src/env.d.ts", "**/*"],
  "exclude": ["dist"],

  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/layouts/*": ["./src/layouts/*"],
      "@/lib/*": ["./src/lib/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
