---
import { cn } from '@/lib/utils';
import FaqItem from './faq-item.astro';

interface Props {
  class?: string;
  faqs: Array<{
    question: string;
    answer: string;
  }>;
}

const { class: className, faqs } = Astro.props;
---

<section
  id="faq"
  class={cn('py-16 md:py-24 bg-base-100 text-base-content', className)}
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-4xl font-extrabold tracking-tight md:text-5xl">
        Câu hỏi thường gặp
      </h2>
      <p class="text-base-content/70 mx-auto max-w-2xl text-lg">
        Tìm câu trả lời cho những thắc mắc về UIT Knowledge
      </p>
    </div>

    <div class="mx-auto max-w-4xl">
      <div class="space-y-4">
        {
          faqs.map((faq, index) => (
            <FaqItem
              question={faq.question}
              answer={faq.answer}
              defaultOpen={index === 0}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
